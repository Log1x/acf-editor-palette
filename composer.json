{
  "name": "log1x/acf-editor-palette",
  "type": "wordpress-plugin",
  "description": "A replica Gutenberg color picker field for Advanced Custom Fields.",
  "keywords": [
    "acf",
    "acf-field",
    "wordpress",
    "wordpress-plugin",
    "gutenberg",
    "color-picker"
  ],
  "require": {
    "php": ">=7.2",
    "composer/installers": "~1.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.5"
  },
  "autoload": {
    "psr-4": {
      "Log1x\\AcfEditorPalette\\": "src/"
    }
  },
  "scripts": {
    "lint": [
      "phpcs --ignore=vendor --exclude=PSR1.Methods.CamelCapsMethodName --extensions=php --standard=PSR12 ."
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
